{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

{% block body %}
    <h1>Team</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ team.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ team.name }}</td>
            </tr>
            <tr>
                <th>Nickname</th>
                <td>{{ team.nickname }}</td>
            </tr>
            <tr>
                <th>Year_of_est</th>
                <td>{{ team.yearOfEst ? team.yearOfEst|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Motto</th>
                <td>{{ team.motto }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_team_index') }}">back to list</a>

    <a href="{{ path('app_team_edit', {'id': team.id}) }}">edit</a>

    {{ include('team/_delete_form.html.twig') }}
{% endblock %}
